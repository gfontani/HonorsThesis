<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="honorsthesis.gabriella.honorsthesis">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Views.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Views.ViewTaskActivity"
            android:label="@string/title_activity_view_task"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Views.ViewProcessActivity"
            android:label="@string/title_activity_view_process"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Views.ViewStepActivity"
            android:label="@string/title_activity_view_step"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Views.CreateListActivity"
            android:label="@string/title_activity_create_list" />
        <activity
            android:name=".Views.EditListActivity"
            android:label="@string/title_activity_edit_list" />
        <activity
            android:name=".Views.CreateTaskActivity"
            android:label="@string/title_activity_create_task" />
        <activity
            android:name=".Views.CreateProcessActivity"
            android:label="@string/title_activity_create_process" />
        <activity
            android:name=".Views.CreateStepActivity"
            android:label="@string/title_activity_create_step"></activity>
    </application>

</manifest>

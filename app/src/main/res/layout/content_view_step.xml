<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="honorsthesis.gabriella.honorsthesis.Views.ViewStepActivity"
    tools:showIn="@layout/activity_view_step">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/step_parent_info"
        android:layout_below="@+id/view"
        android:layout_toRightOf="@+id/include"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="60dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/list_underline"
            android:id="@+id/process_parent_list" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Process Name"
            android:id="@+id/step_parent_process_text"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/notes_underline"
        android:id="@+id/step_notes_title"
        android:layout_below="@+id/step_parent_info"
        android:layout_alignLeft="@+id/process_list_info"
        android:layout_alignStart="@+id/process_list_info"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="These are some notes!"
        android:id="@+id/step_notes"
        android:layout_below="@+id/step_notes_title"
        android:layout_alignLeft="@+id/process_list_info"
        android:layout_alignStart="@+id/process_list_info"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp" />

</RelativeLayout>
